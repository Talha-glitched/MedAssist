# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mediassist

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# AI Services Configuration
# Hugging Face API (optional - for production use)
HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_STT_URL=https://api-inference.huggingface.co/models/openai/whisper-large-v3
HUGGINGFACE_NLP_URL=https://api-inference.huggingface.co/models/microsoft/DialoGPT-medium
# Translation Services (choose one)
# Option 1: Google Translate (Recommended - excellent Urdu support)
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key
GOOGLE_TRANSLATE_URL=https://translation.googleapis.com/language/translate/v2

# Option 2: Azure Translator (Enterprise-grade)
AZURE_TRANSLATOR_KEY=your-azure-translator-key
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com
AZURE_TRANSLATOR_REGION=your-region

# Option 3: LibreTranslate (Free/Open source)
LIBRE_TRANSLATE_URL=https://libretranslate.com/translate

# Option 4: Hugging Face (Fallback)
HUGGINGFACE_TRANSLATION_URL=https://api-inference.huggingface.co/models/Helsinki-NLP/opus-mt-en-es

# TTS Service Configuration
# Option 1: ElevenLabs (free tier available)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Option 2: Google Cloud TTS (requires Google Cloud setup)
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_RATE_LIMITING=false

# File Upload Limits
MAX_FILE_SIZE=52428800
